{
  "name": "PokemonHectorRuiz",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/http-client": "^4.4.0",
    "@sap-cloud-sdk/resilience": "^4.4.0",
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-trainerlist": "cds watch --open com.nbx.trainerlist/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "cds": {
    "requires": {
      "auth": {
        "kind": "mocked",
        "users": {
          "theadmin": {
            "password": "123",
            "roles": [
              "Admin"
            ]
          },
          "thetrainer": {
            "password": "123",
            "roles": [
              "Trainer"
            ]
          },
          "theviewer": {
            "password": "123",
            "roles": [
              "Viewer"
            ]
          },
          "hector": {
            "password": "123",
            "roles": [
              "Admin"
            ]
          }
        }
      },
      "PokeAPIDestination": {
        "kind": "rest",
        "credentials": {
          "destination": "PokeAPI",
          "selectionStrategy": "AlwaysProvider"
        },
        "[production]": {
          "destinations": "true"
        },
        "[hybrid]": {
          "destinations": true
        }
      },
      "[production]": {
        "auth": {
          "kind": "xsuaa"
        }
      }
    }
  },
  "workspaces": [
    "app/*"
  ]
}
